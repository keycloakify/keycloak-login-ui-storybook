{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2017",
        "moduleResolution": "node",
        "lib": ["es2017", "DOM", "ES2019.Object"],
        "esModuleInterop": true,
        "declaration": true,
        // Do not change or the linking script will stop working
        "outDir": "./dist",
        "sourceMap": false,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react-jsx",
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["src/**/*.deno.ts", "src/**/*.deno.tsx", "keycloak-theme"]
}
